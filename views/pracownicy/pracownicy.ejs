<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/pracownicy/pracownicy.css">
    <script type="text/javascript" src="pracownicy.js"></script>
</head>
<body>
<div id="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Pracownicy</a>
    </nav>
    <table>
        <div class="table-headers">
            <p>Pracownicy</p>
        </div>
        <tr>
            <th>Id</th>
            <th>Imie</th>
            <th>Nazwisko</th>
            <th>Zwolnij</th>
        </tr>
        <% for (let i=0; i < obj.length; i++) { %>
            <tr>
                <td class="edit-pracownik"  style="font-weight:bold"><%= obj[i].id_prac%></td>
                <td class="edit-pracownik"><%= obj[i].imie%></td>
                <td class="edit-pracownik"><%= obj[i].nazwisko%></td>
                <td class="delete_button">X</td>
            </tr>
        <% } %>
    </table>
        <form action="/pracownicy" method="post" id="add-pracownik">
            <input class="form-control" placeholder="Id pracownika" type="number" id="id_prac"/>
            <input class="form-control" placeholder="Imie" id="imie_pracownika"/>
            <input class="form-control" placeholder="Nazwisko" id="nazwisko_pracownika"/>
            <input class="form-control" placeholder="Pozycja" id="pozycja_pracownika"/>
            <input class="form-control" placeholder="Stawka godzinowa" id="stawka_godzinowa"/>
            <input class="form-control" placeholder="Urlop" id="dni_urlop"/>
            <input class="form-control" placeholder="Przepracowane godziny" id="przepracowane_godziny"/>
            <button id="dodaj_pracownika" class="btn btn-primary" type="button" type="submit">Dodaj</button>
        </form>
    <p id="wrong-req"></p>
</div>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>